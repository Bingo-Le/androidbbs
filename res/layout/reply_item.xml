<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"   
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_margin="5dip"
	android:gravity="center_vertical"
	android:orientation="vertical"
	android:background="@drawable/reply_item_bg"> 
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dip"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/reply_user_img"
			android:layout_width="40dip"
			android:layout_height="40dip"
			android:layout_marginRight="5dip"/>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<FrameLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/reply_user_name"
		    	  	android:layout_width="fill_parent"
		  			android:layout_height="wrap_content"
		  			android:gravity="left"
		  			android:textColor="#008080"
		  			android:textSize="12sp"/>
		  		<TextView
		  			android:id="@+id/reply_date"
		    	  	android:layout_width="fill_parent"
		  			android:layout_height="wrap_content"
		  			android:gravity="right"
		  			android:paddingRight="5dip"
		  			android:textColor="#412f1f"
		  			android:textSize="12sp"/>
			</FrameLayout>
			<FrameLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dip"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/reply_num"
		    	  	android:layout_width="fill_parent"
		  			android:layout_height="wrap_content"
		  			android:gravity="left"
		  			android:textColor="#96582a"
		  			android:textSize="12sp"/>
			</FrameLayout>
		</LinearLayout>
	</LinearLayout>
	<TextView 
		android:id="@+id/reply_msg"   
		android:layout_width="fill_parent"       
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dip"  
		android:layout_marginRight="20dip" 
		android:layout_marginBottom="5dip"  
		android:paddingLeft="5dip"
		android:textSize="14sp"
		android:textColor="#888888"
		android:background="@drawable/msg_bg"/>
	<TextView 
		android:id="@+id/reply_text"   
		android:layout_width="fill_parent"       
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dip"  
		android:layout_marginRight="10dip" 
		android:paddingBottom="3dip"  
		android:textSize="14sp"
		android:textColor="#4b4155"/>
</LinearLayout>